<div>
  Title: <%= @game.title %>
</div>
  <img src="<%= @cover %>">
  <div>
    Genres: <ul>
      <% @genres.each do |genre| %>
        <li><%= genre %></li>
      <% end %>
    </ul>
  </div>
<div>
  Users playing: <% @game.users.each do |user| %>
    <%= link_to user.nickname, user %>
  <% end %>

  <% if current_user && !(@game.has_association?(current_user)) %>
    <%= form_tag '/user_games', method: :post do %>
      <%= hidden_field_tag :game_id, @game.id %>
      <%= submit_tag 'Add Game' %>
    <% end %>
  <% end %>
</div>
