<div class="container">
  <%= form_tag '/users', method: :post do %>
    <%= text_field_tag :nickname, nil, placeholder: "Nickname" %>
    <%= text_field_tag :email, nil, placeholder: "Email Address" %>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
    <%= password_field_tag :password_confirmation, nil, placeholder: "Password Confirmation" %>
     <%= text_field_tag :bio, nil, placeholder: "Say a little about yourself!" %>
    <%= submit_tag "Signup" %>
  <% end %>
</div>